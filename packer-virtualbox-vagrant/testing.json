{
  "description": "Vanilla Debian Testing base box",
  "variables": {
      "box_changelog": "* snapshot release, based on stretch installer and upgrade to testing\n"
    },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/testing-preseed.cfg <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=localdomain <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "kbd-chooser/method=us <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "disk_size": "10140",
      "disk_interface": "virtio",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "c9e070074de83aa22e141f59a423e5210a5019b369ef1efe61a2afd44ba8f371",
      "iso_checksum_type": "sha256",
      "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-9.1.0-amd64-netinst.iso",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": "22",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "qemuargs": [[ "-m", "1024M" ],[ "-smp", "2" ]],
      "accelerator": "kvm",
      "vm_name": "testing",
      "output_directory": "testing.build",
      "format": "raw"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "pause_before": "10s",
      "execute_command": "echo 'vagrant'| {{.Vars}} sudo --preserve-env --stdin sh '{{.Path}}'",
      "environment_vars": [
         "VAGRANT_BUILDER_FS=/"
      ],
      "scripts": [
	"scripts/upgrade-to-testing.sh"
      ]
    },
    {
      "type": "shell",
      "pause_before": "10s",
      "execute_command": "echo 'vagrant'| {{.Vars}} sudo --preserve-env --stdin sh '{{.Path}}'",
      "environment_vars": [
         "VAGRANT_BUILDER_FS=/"
      ],
      "scripts": [
        "../helpers/vagrant-setup",
        "scripts/minimize.sh"
      ]
    }

  ]
}
